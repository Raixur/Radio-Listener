#!/bin/sh

echo "Download panako..."
wget http://panako.be/releases/Panako-latest/Panako-latest-src.zip
unzip Panako-latest-src.zip

cd Panako/build

echo "Change default encoding..."
sed -ie "s/<javac/<javac encoding=\"UTF-8\"/" build.xml

echo "Preparing for intallation..."
mkdir -p /opt/panako
chmod 777 /opt/panako
chmod +x ../doc/etc/docs2html
touch logging.properties

echo "Build panako..."
ant
ant install
ant doc

echo "Install panako cli..."
chmod +x ../doc/panako
cp ../doc/panako /usr/bin